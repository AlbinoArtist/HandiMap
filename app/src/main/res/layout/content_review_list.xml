                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Klicka för att läsa mer"
                    android:layout_gravity="end"
                    android:paddingRight="10dp"
                    android:textColor="@color/blueLink"/>
            </LinearLayout>

